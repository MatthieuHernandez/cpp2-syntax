{
    "name": "cpp2-syntax",
    "publisher": "elazarcoh",
    "repository": {
        "type": "git",
        "url": "https://github.com/elazarcoh/cpp2-syntax"
    },
    "displayName": "cpp2 (cppfront) Syntax Highlighting",
    "description": "Syntax highlighting for cpp2 (cppfront) language",
    "version": "0.0.1",
    "preview": true,
    "engines": {
        "vscode": "^1.63.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "cpp2",
                "extensions": [
                    ".cpp2"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "cpp2",
                "scopeName": "source.cpp2",
                "path": "./syntaxes/cpp2.tmLanguage"
            }
        ],
        "configurationDefaults": {
            "editor.tokenColorCustomizations": {
                "[Default Dark+]": {
                    "textMateRules": [
                        {
                            "scope": "entity.name.variable.declaration.cpp2",
                            "settings": {
                                "foreground": "#76edfd"
                            }
                        },
                        {
                            "scope": "entity.name.function.declaration.cpp2",
                            "settings": {
                                "foreground": "#fde276"
                            }
                        }
                    ]
                },
                "textMateRules": [
                    {
                        "scope": "entity.name.variable.declaration.cpp2",
                        "settings": {
                            "fontStyle": "bold"
                        }
                    },
                    {
                        "scope": "entity.name.function.declaration.cpp2",
                        "settings": {
                            "fontStyle": "bold"
                        }
                    }
                ]
            }
        }
    },
    "scripts": {
        "build": "node ../utils/build.js",
        "package": "vsce package --yarn",
        "prepublish": "yarn build"
    },
    "dependencies": {}
}
